<section class="block">
    <div class="hero is-success">
        <div class="hero-body">
            <div class="container">
                <h2 class="title">CV Library </h2>
            </div>
        </div>
    </div>
</section>


<section class="block">
    <div class="container">
        <form class="form" action="filter" method="POST">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label" for="jobTextInput">Job Title</label>
                </div>

                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input class="input" id="jobTextInput" name="jobTitle" placeholder="Software Engineer" type="text" list="jobList">
                            <datalist id="jobList">

                               
                                <% for (job of jobList) {   %>
                                    <option> <%= job %> </option>
                                    <% } %>
                            </datalist>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label" for="technicalSkillsTextInput">Technical Skills</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input class="input" id="technicalSkillsTextInput" name="technicalSkills" placeholder="Java,C++,Python,..." type="text">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-grouped is-grouped-centered">
                <p class="control">
                    <button class="button is-primary" type="submit">
                        Search
                    </button>
                </p>
            </div>
        </form>
    </div>
</section>

<section class="block">
    <div class="container">
        <table class="table is-striped is-hoverable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Job Position</th>
                    <th>Job Offers</th>
                    <!-- <th>Status</th> -->
                </tr>
            </thead>
            <tbody>
                <% for (cv of list) { %>
                    <!-- Stupid way of doing a clickable table row lol
                    - I wouldn't have come up with anything different lol -->
                    <tr onclick="window.location='/posts/<%= cv.cvId %>';" style="cursor: pointer;">
                        <td>
                            <%= cv.cvId %>
                        </td>
                        <td>
                            <%= cv.jobTitle %>
                        </td>
                        <!-- <td>
                            <%= cv.technicalSkills %>
                        </td> -->
                        <td>
                            <%= cv.jobOffers %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</section>